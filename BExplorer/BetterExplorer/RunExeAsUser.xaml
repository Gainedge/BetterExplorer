<Window x:Class="BetterExplorer.RunExeAsUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Run as Another User" Height="130" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="15,13,0,0" Name="textBlock1" Text="Enter the username you wish to run this app under:" VerticalAlignment="Top" />
        <TextBox Height="23" HorizontalAlignment="Left" Margin="10,41,0,0" Name="textBox1" VerticalAlignment="Top" Width="322" KeyUp="textBox1_KeyUp" />
        <Button Content="{StaticResource txtCancel}" Height="23" HorizontalAlignment="Right" Margin="0,70,10,0" Name="button1" VerticalAlignment="Top" Width="75" Click="button1_Click" />
        <Button Content="{StaticResource tgRunCP}" Height="23" HorizontalAlignment="Right" Margin="0,70,90,0" Name="button2" VerticalAlignment="Top" Width="75" Click="button2_Click" />
    </Grid>
</Window>
