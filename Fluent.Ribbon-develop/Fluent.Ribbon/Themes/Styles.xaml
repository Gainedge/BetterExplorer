                      Grid.RowSpan="2"
                      Width="1"
                      Height="Auto"
                      Margin="24,0,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Stretch"
                      Fill="{x:Null}"
                      Stretch="Fill"
                      Stroke="{DynamicResource Fluent.Ribbon.Brushes.Separator.BorderBrush}"
                      Visibility="Visible" />
                    <Grid
                      x:Name="PART_MenuPanel"
