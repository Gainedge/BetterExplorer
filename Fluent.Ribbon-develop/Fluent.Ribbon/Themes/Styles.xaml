      <Grid
        Grid.Column="0"
        Grid.ColumnSpan="3"
        Width="Auto"
        Margin="0"
        HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="0.905*" />
          <ColumnDefinition x:Name="columnDefinition" Width="23" />
